{
    "productName": "donuts.node",
    "copyright": "Copyright (c) 2018 Microsoft Corporation.",
    "configs": {
        "tasks": {
            "clean": {
                "globs": [
                    "./build"
                ]
            }
        }
    },
    "tasks": {
        "compile@typescript": {
            "sources": [
                "**/*.ts",
                "!<buildRootDir>/**/*",
                "!<publishDir>/**/*"
            ],
            "ignore-target": true,
            "processors": [
                "tslint",
                "typescript"
            ]
        },
        "compile@license": {
            "sources": [
                "**/package.json",
                "!<buildRootDir>/**/*",
                "!<publishDir>/**/*"
            ],
            "ignore-target": true,
            "processors": [
                "licensing"
            ]
        },
        "copy@resource-files": {
            "sources": [
                "**/*.json",
                "./LICENSE",
                "!<buildRootDir>/**/*",
                "!<publishDir>/**/*",
                "!package-lock.json",
                "!tsconfig.json",
                "!tslint.json",
                "!buildinfos.json"
            ],
            "ignore-target": true,
            "processors": []
        },
        "build": [
            "init",
            {
                "executionModel": "parallel",
                "tasks": [
                    "compile@typescript",
                    "compile@license",
                    "copy@resource-files"
                ]
            },
            "npm@install"
        ],
        "clean-build": [
            "clean",
            "build"
        ],
        "publish": [
            "clean-build"
        ]
    },
    "paths": {
        "buildRootDir": "./build",
        "buildDir": "./build/pkg",
        "intermediateDir": "./build/temp",
        "publishDir": "./publish"
    },
    "ignores": [
        "./.build",
        "./.vscode",
        "./node_modules"
    ]
}